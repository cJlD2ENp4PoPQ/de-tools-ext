{
  "manifest_version": 2,
  "name": "Die-Ewigen Extension",
  "version": "0.4.5",

  "description": "Erweiterung f√ºr das Browsergame Die-Ewigen",

  "icons": {
    "48": "icons/border-48.png"
  },

"permissions": [
    "*://sde.bgam.es/*",
	"*://rde.bgam.es/*",
    "*://xde.bgam.es/*"
  ],

  "web_accessible_resources": ["icons/icons8-move-50.png", "css/fields.css", "css/trade.css"],

  "content_scripts": [
    {
      "matches": ["*://*.bgam.es/dm.php","*://*.bgam.es/sector.php*","*://*.bgam.es/production.php*","*://*.bgam.es/auction.php*"],
      "js": ["de.js","frame.js","fields.js","sek.js","military.js","secret.js", "production.js", "trade.js"],
      "css":["css/fields.css","css/trade.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}