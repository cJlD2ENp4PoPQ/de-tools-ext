{
  "manifest_version": 3,
  "name": "Die-Ewigen Extension",
  "version": "0.7.7",
  "description": "Erweiterung f√ºr das Browsergame Die-Ewigen",
  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ba53e3af-87aa-4d99-80e5-dec896775c0c}"
    }
  },
  "default_locale": "de",
  "permissions": ["scripting"],
  "host_permissions": [
    "*://xde.die-ewigen.com/*",
    "*://sde.die-ewigen.com/*",
    "*://rde.die-ewigen.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/fields.css",
        "icons/icons8-move-50.png",
        "icons/tb_timedata.png",
        "css/time.css",
        "icons/flight.svg",
        "css/trade.css",
        "content/info.html"
      ],
      "matches": ["*://*.die-ewigen.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.die-ewigen.com/dm.php",
        "*://*.die-ewigen.com/sector.php*",
        "*://*.die-ewigen.com/production.php*",
        "*://*.die-ewigen.com/auction.php*",
        "*://*.die-ewigen.com/overview.php*",
        "*://*.die-ewigen.com/sysnews.php*",
        "*://*.die-ewigen.com/map_system.php*",
        "*://*.die-ewigen.com/ally_detail.php*",
        "*://*.die-ewigen.com/secret.php*",
        "*://*.die-ewigen.com/map_mobile.php*"
      ],
      "js": [
        "js/pages/de.js",
        "js/utils/frame.js",
        "js/utils/fields.js",
        "js/utils/table.js",
        "js/utils/storage.js",
        "js/utils/time.js",
		"js/utils/ContextMenu.js",
        "js/pages/sek.js",
        "js/pages/military.js",
        "js/pages/secret.js",
        "js/pages/production.js",
        "js/pages/trade.js",
        "js/pages/news.js",
        "js/pages/ally.js",
        "js/pages/overview.js",
        "js/pages/vsys.js"
      ],
      "css": [
        "css/fields.css",
        "css/trade.css",
        "css/time.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}