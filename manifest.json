{
  "manifest_version": 2,
  "name": "Die-Ewigen Extension",
  "version": "0.4.7",

  "description": "Erweiterung f√ºr das Browsergame Die-Ewigen",

  "icons": {
    "48": "icons/border-48.png"
  },

"permissions": [
    "*://sde.bgam.es/*",
	"*://rde.bgam.es/*",
    "*://xde.bgam.es/*",
    "*://dde.bgam.es/*",
    "*://ede.bgam.es/*",
    "*://cde.bgam.es/*"
  ],

  "web_accessible_resources": ["icons/icons8-move-50.png", "css/fields.css", "css/trade.css"],

  "content_scripts": [
    {
      "matches": ["*://*.bgam.es/dm.php",
        "*://*.bgam.es/sector.php*",
        "*://*.bgam.es/production.php*",
        "*://*.bgam.es/auction.php*"],
      "js": ["js/pages/de.js",
        "js/utils/frame.js",
        "js/utils/fields.js",
        "js/utils/storage.js",
        "js/pages/sek.js",
        "js/pages/military.js",
        "js/pages/secret.js",
        "js/pages/production.js",
        "js/pages/trade.js"],
      "css":["css/fields.css", "css/trade.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}